<%= simple_form_for(@year_in_review_release, url: create_user_music_year_in_review_top_release_path(params[:user_id], params[:year]), method: :post, remote: true, html: {class: 'form-horizontal'}) do |f| %>
  <div class="modal-header">
    <button type="button" id="close_bootstrap_modal_button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><%= t('year_in_review_music_releases.index.add_single_long', year: params[:year])%></h3>
  </div>
  <div class="modal-body" style="overflow-y:none;">
    <%= render partial: 'shared/form/error_messages', locals: { resource: @year_in_review_release } %>
    <%= f.input :artist_id, as: :hidden %>
    <%= f.input :artist_name, as: :string, required: true, input_html: { autocomplete: 'on', data: { source: autocomplete_music_artists_path } } %>
    <div id="year_in_review_music_release_artist_name_suggestions"/>
    <%= f.input :release_id, as: :hidden %>
    <%= f.input :release_name, as: :string, required: true %>
    <div id="year_in_review_music_release_release_name_suggestions"/>
  </div>
  <div class="modal-footer">
    <%= f.submit %>
  </div>
<% end %>