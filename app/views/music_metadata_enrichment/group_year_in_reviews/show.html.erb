<% content_for(:title) do %>
  <%= t('years_in_review_music.show.title_with_name', user: name_with_apostrophe(@group.name), year: params[:year]) %>
<% end %>

<% content_for :breadcrumbs do %>
  <%= raw [
    link_to(@group.name, music_group_path(@group)),
    link_to(I18n.t('years_in_review_music.index.short_title'), group_music_years_in_review_path(@group)),
    link_to(I18n.t('years_in_review_music.show.title', year: @year_in_review.year), group_music_year_in_review_path(@group, @year_in_review.year))
  ].join(' > ') %>
<% end %>

<ul class="nav nav-tabs nav-stacked">
  <li><%= link_to(
    t('year_in_review_music_releases.index.shortest_title'), group_music_year_in_review_top_releases_path(@group, params[:year])
  ) %></li>
  <li><%= link_to(
    t('year_in_review_music_tracks.index.shortest_title'), group_music_year_in_review_top_tracks_path(@group, params[:year])
  ) %></li>
</ul>
