<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" id="close_bootstrap_modal_button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3><%= t('music_metadata_enrichment_groups.show.export', year: params[:year])%></h3>
    </div>
    <div class="modal-body" style="overflow-y:none;">
      <textarea rows="20" style="width:515px;">
    <% @current_releases.each do |release| %>
    <%= release.formatted_released_at_or_future_release_date %>. [artist]<%= release.artist_name %>[/artist] - [album artist=<%= release.artist_name %>]<%= release.name %>[/album]
    <% end %>
    
    <% @future_releases.each do |release| %>
    <%= release.formatted_released_at_or_future_release_date %>. [artist]<%= release.artist_name %>[/artist] - [album artist=<%= release.artist_name %>]<%= release.name %>[/album]
    <% end %>
      </textarea>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
