<h3><%= t('music_releases.name.title') %></h3>

<%= simple_form_for(
  @release, url: name_confirmation_music_releases_path, method: :get, html: { class: 'form-horizontal' }, 
  remote: request.xhr?, wrapper: :horizontal_form
) do |f| %>
  <%= render partial: 'shared/form/error_messages', locals: { resource: @release } %>
  <%= hidden_field_tag :group_id, params[:group_id] if params[:group_id].present? %>
  <%= hidden_field_tag :year_in_review_music_id, params[:year_in_review_music_id] %>
  <%= f.hidden_field :artist_id %>
  <%= f.input :name %>
  <%= f.submit t('music_releases.name.submit') %>
<% end %>