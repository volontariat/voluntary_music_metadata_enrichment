<h3><%= title %></h3>

<%= simple_form_for(@artist, url: form_url, method: :get, html: {class: 'form-horizontal'}, remote: request.xhr?) do |f| %>
  <%= hidden_field_tag :group_id, params[:group_id] if params[:group_id].present? %>
  <%= hidden_field_tag :user_id, params[:user_id] if params[:user_id].present? %>
  <%= hidden_field_tag :year_in_review_music_id, params[:year_in_review_music_id] %>
  <%= render partial: 'shared/form/error_messages', locals: { resource: @artist } %>
  <%= f.input :name %>
  <%= f.input :mbid %>
  <%= f.submit t('music_artists.new.submit') %>
<% end %>